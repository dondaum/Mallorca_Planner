        <td><%= reservation.start_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= reservation.comment %></td>
        <td><%= link_to 'Anzeigen', reservation %></td>
        <td><%= link_to 'Bearbeiten', edit_reservation_path(reservation) %></td>

<div class="center-align">
  <h2>Alle Reservierungen</h2>
    <div class="row">
      <% @reservations.each do |reservation| %>
      <div class="col s12 m6">
        <div class="card">
          <div class="card-image">
            <img src="https://static.pexels.com/photos/386025/pexels-photo-386025.jpeg">
            <span class="card-title"><%= truncate(reservation.title, length: 25) %></span>
            <%= link_to '<i class="material-icons">add</i>'.html_safe, reservation, :class => "btn-floating halfway-fab waves-effect waves-light red" %>
          </div>
          <div class="card-content">
            <p><%= truncate(reservation.comment, length: 64) %></p>
          </div>
          <div class="card-action">
            <%= link_to 'Anzeigen', reservation %>
            <%= link_to 'Bearbeiten', edit_reservation_path(reservation) %>
            <%= link_to 'LÃ¶schen', reservation, method: :delete, data: { confirm: 'Bist du sicher?' } %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>

<% @reservations.each do |reservation| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card light-blue">
        <div class="card-content white-text">
          <span class="card-title"><%= reservation.title %></span>
          <p>Von: <%= reservation.start_date.strftime('%d.%m.%Y') %> </p>
          <p>Bis:  <%= reservation.end_date.strftime('%d.%m.%Y') %>  </p>
          <p>Kommentar: <%= truncate(reservation.comment, length: 64) %>
        </div>
        <div class="card-action">
          <%= link_to 'Anzeigen', reservation %>
          <%= link_to 'Bearbeiten', edit_reservation_path(reservation) %>
          <%= link_to 'LÃ¶schen', reservation, method: :delete, data: { confirm: 'Bist du sicher?' } %>
        </div>
      </div>
    </div>
  </div>
  <div class="divider"></div>
  <div class="section">
    <h5><%= reservation.title %></h5>
  </div>
<% end %>
<%= link_to 'Neue Reservierung', new_reservation_path, :class => "waves-effect waves-light btn-large" %>
